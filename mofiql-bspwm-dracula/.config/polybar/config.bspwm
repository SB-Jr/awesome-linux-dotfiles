[bar/fullbar]
monitor = 
include-file = ~/.config/polybar/fullbar

background = #bb282a36
foreground = #f8f8f2

modules-left = workspaces separator title separatordotted mpd 
modules-center = 
modules-right = memory spacing cpu separatordotted volume spacing wlan spacing battery spacing updates separatordotted date powermenu

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


[module/memory]
type = internal/memory
internal = 1
format = <label>
label =   %mb_used%

[module/cpu]
type = internal/cpu
internal = 0.5
format =   <label>%
label = %percentage%

[module/date]
type = internal/date
interval = 60
date = %a %d %b
time = %l:%M %p
#label =  %date%   %time%
label = %date% %time%
;label =  %time%
format-padding = 1
label-font = 3

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
poll-interval = 2
format-discharging =  <label-discharging>%
format-full =  <label-full>% 
format-charging =   <label-charging>% 
label-charging = %percentage%
label-discharging =  %percentage%
label-full =  Fully Charged
time-format = %H:%M

[module/wlan]
type = internal/network
interface = wlp7s0
interval = 5
label-connected =  %essid% 
label-disconnected = 

[module/volume]
type = internal/alsa
format-volume =   <ramp-volume>  <label-volume>
format-muted =   Muted
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "  "
label-connected = %downspeed:9%
format-disconnected = <label-disconnected>
label-disconnected = not connected
format-padding = 1


[module/mpd]
type = internal/mpd
interval = 2
format-online = <icon-prev> <toggle> <icon-next> <label-song>
label-song = %artist% - %title%
label-song-maxlen = 20
label-song-ellipsis = true
format-online-foreground = "#bd93f9"
label-offline =   Offline
format-offline = <label-offline>
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
format-padding = 2

[module/title]
type = internal/xwindow
format = <label>
label = %title:0:20:...%
#label-maxlen = 20
format-font = 3
label-foreground = "#50fa7b"


[module/notifications]
type = custom/text
content = 
click-left = kill -s USR1 $(pidof deadd-notification-center)

[module/quit]
type = custom/text
content = 
click-left = bspc quit
content-foreground = "#ff5555"
content-padding = 2


[module/menu]
type = custom/text
content =   
click-left = ~/.config/rofi/launchers-git/launcher.sh &
content-padding = 2

[module/updates]
type = custom/script
exec = ~/.config/polybar/updates.sh
tail = true
interval = 5

[module/separator]
type = custom/text
content =  
content-padding = 0
content-foreground = "#ff5555"

[module/spacing]
type = custom/text
content = " " 
content-padding = 0

[module/separatordotted]
type = custom/text
content =  
content-padding = 0
content-foreground = "#ff5555"

[module/powermenu]
type = custom/menu

expand-left = true

menu-0-0 = Logout
menu-0-0-exec = i3-msg exit
menu-0-1 = Lock
menu-0-1-exec = mantablockscreen
menu-0-2 =  Poweroff
menu-0-2-exec = poweroff
menu-0-3 =   Reboot
menu-0-3-exec = reboot
format-spacing = 1 
format-padding = 2

label-open = 
label-close = 

label-separator = |


[module/workspaces]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = true

ws-icon-0 = 1;1: 
ws-icon-1 = 2;2: 
ws-icon-2 = 3;3: 
ws-icon-3 = 4;4: 
ws-icon-4 = 5;5: 
ws-icon-5 = 6;6: 
ws-icon-6 = 7;7: 
ws-icon-7 = 8;8: 
ws-icon-8 = 9;9: 
ws-icon-default = 


format = <label-state> <label-mode>

label-monitor = %icon%

label-focused = %icon%
label-focused-padding = 2
label-focused-background = "#bd93f9"
label-focused-foreground = "#212121"

label-occupied = %icon%
label-occupied-padding = 2

label-dimmed-foreground = #bd93f9
label-dimmed-underline = #bd93f9
;label-dimmed-focused-background = #212121

label-urgent = %icon%
label-urgent-foreground = "#ff5555"
;label-urgent-background = "#212121"
label-urgent-underline = "#ff5555"
label-urgent-padding = 2

label-empty =
