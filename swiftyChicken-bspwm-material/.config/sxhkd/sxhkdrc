################################################
#               WM CONTROLS                    #
################################################
,
# make sxhkd reload its configuration files:
alt + shift + r
	pkill -USR1 -x sxhkd && dunstify -r 500 "SXHKD" "config reloaded"

#
# bspwm hotkeys
#

# quit/restart bspwm
alt + r
	bspc wm -r && dunstify -r 500 "BSPWM" "bspwm reloaded"

# close and kill
alt + {_,shift + }d
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
alt + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}.local.!floating

# focus the next/previous node in the current desktop
alt + {_,shift + }v
	bspc node -f {next,prev}.local.floating

# focus the next/previous desktop in the current monitor
alt + {i,o}
	bspc desktop -f {prev,next}.occupied && bspc node -f newest.local.!floating

alt + shift + {i,o}
	bspc desktop -f {prev,next} && bspc node -f newest.local.!floating

# focus the last node/desktop
alt + Tab
	bspc desktop -f last.occupied && bspc node -f newest.local.!floating

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{ampersand,eacute,quotedbl,apostrophe,parenleft,section,egrave,exclam,ccedilla,agrave}
	bspc {desktop -f,node -d} '^{1-9,10}' && bspc node -f newest.local.!floating

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + mod5 + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
alt + mod5 + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

################################################
#               MEDIA KEYS                     #
################################################

# Player Previous
XF86AudioPrev
	playerctl previous

# Player Next
XF86AudioNext
	playerctl next

# Player Play/Pause
XF86AudioPlay
	playerctl play-pause

# Volume up
XF86AudioRaiseVolume 
	pamixer -i 10 ; ~/.config/polybar/scripts/volume.sh

# Volume down
XF86AudioLowerVolume 
	pamixer -d 10 ; ~/.config/polybar/scripts/volume.sh

# Volume mute
XF86AudioMute 
	pamixer -t ; ~/.config/polybar/scripts/volume.sh

# Brightness up
XF86MonBrightnessUp
	brightnessctl set +10% ; ~/.config/polybar/scripts/volume.sh

# Brightnes down
XF86MonBrightnessDown
	[ $(($(brightnessctl g)-750)) -le "0" ] && brightnessctl set 1% || brightnessctl set 10%- ; ~/.config/polybar/scripts/volume.sh

################################################
#              APPLICATIONS                    #
################################################

# Alacritty
{mod5,super} + Return
	alacritty

# Launcher
{mod5,super} + @space
	launcher.sh

# Power Menu
{mod5,super} + Escape
	$HOME/.config/polybar/scripts/power-menu.sh

# Qutebrowser
{mod5,super} + {_,shift + } q
	{_,_}{qutebrowser ,bspc desktop -l monocle; qutebrowser --temp-basedir --set content.private_browsing true --config-py "$HOME/.config/qutebrowser/config.py"; bspc desktop -l tiled}

# Spotify
{mod5,super} + s
	start-spotify

# Gimp
{mod5,super} + g
	gimp

# Newsboat: RSS feed
{mod5,super} + n
	start-newsboat.sh &

# Discord
{mod5,super} + d
	discord

# Vim - Editor
{mod5,super} + e
	start-vim.sh -c

# Scratchpad
{mod5,super} + a
	sid=$(cat /tmp/scratchID);\
	cid=$(cat /tmp/calcID);\
	wmctrl -ir $sid -b toggle,hidden && wmctrl -ir $cid -b add,hidden; wmctrl -ia $sid	

# Calc
{mod5,super} + c
	cid=$(cat /tmp/calcID);\
	sid=$(cat /tmp/scratchID);\
	wmctrl -ir $cid -b toggle,hidden && wmctrl -ir $sid -b add,hidden; wmctrl -ia $cid

# Lf: File manager
{mod5,super} + l
	toggle-lf.sh

